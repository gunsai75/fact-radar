{
    "manifest_version": 3,
    "name": "Fact Radar",
    "version": "1.0",
    "description": "Detects AI-generated content in real-time.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.jpg"
    },
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    }
  }